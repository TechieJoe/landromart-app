    <title>Order Table</title>
    <style>
        /* General styling */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f5f5f5;
        }

        /* Styling the heading */
        h1 {
            text-align: center;
            font-size: 28px;
            color: #333;
            margin-bottom: 20px;
        }

        /* Table styling */
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        th, td {
            padding: 12px 15px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: white;
            text-transform: uppercase;
            font-weight: 600;
            font-size: 14px;
        }

        td {
            font-size: 14px;
        }

        /* Checkbox alignment */
        .item, .optional {
            margin-left: 10px;
        }

        /* Button styling */
        button.btn {
            padding: 5px 10px;
            font-size: 14px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button.btn:hover {
            background-color: #0056b3;
        }

        button.decrement, button.increment {
            margin: 0 5px;
        }

        button#submit {
            display: block;
            margin: 0 auto;
            background-color: #28a745;
            font-size: 16px;
            padding: 10px 20px;
        }

        button#submit:hover {
            background-color: #218838;
        }

        /* Quantity value */
        .value {
            padding: 5px 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            display: inline-block;
            min-width: 30px;
            background-color: #f1f1f1;
        }

        /* Responsive design for smaller screens */
        @media screen and (max-width: 768px) {
            table, th, td {
                font-size: 12px;
                padding: 8px;
            }

            button.btn {
                padding: 3px 8px;
                font-size: 12px;
            }

            button#submit {
                font-size: 14px;
                padding: 8px 16px;
            }
        }
    </style>
</head>
