<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transaction History</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    
    .transaction {
      border: 1px solid #ddd;
      padding: 20px;
      margin-bottom: 15px;
      border-radius: 5px;
      background-color: #f9f9f9;
    }
    
    .transaction h2 {
      margin-top: 0;
      font-size: 18px;
    }
    
    .transaction p {
      margin: 5px 0;
    }
    
    .transaction-date {
      font-weight: bold;
      font-size: 16px;
      margin-bottom: 10px;
    }

    .transaction-order {
      margin-bottom: 5px;
    }

    .transaction-total {
      font-size: 18px;
      color: #333;
      font-weight: bold;
    }
    
  </style>
</head>
<body>
  <h1>Your Transaction History</h1>

  <% transactions.forEach(function(transaction) { %>
    <div class="transaction">
      <p class="transaction-date">Date: <%= new Date(transaction.createdAt).toLocaleDateString('en-GB', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></p>
      <p class="transaction-order">Order ID: <%= transaction.orderId %></p>
      <p class="transaction-orders">Orders: <%= transaction.orders %></p>
      <p class="transaction-total">Total: &#8358;<%= transaction.grandTotal ? transaction.grandTotal.toLocaleString() : 'N/A' %></p>
    </div>
  <% }) %>

</body>
</html>
